@model BookStorage.Models.GoodsReceipt

@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "GoodsReceipt", FormMethod.Post))
{
    <div class="create-new-title">Chỉnh sửa phiếu nhập</div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="create-new-form">
        <div class="create-new-add">
            @Html.HiddenFor(model => model.ID)
            <div>
                <p>@Html.LabelFor(model => model.DelivererName)</p>
                @Html.EditorFor(model => model.DelivererName, new { htmlAttributes = new { placeholder = "Tên Người giao" } })
                @Html.ValidationMessageFor(model => model.DelivererName, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.CreatedDate)</p>
                @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { placeholder = "Ngày tạo" } })
                @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.SupplierID)</p>
                @Html.DropDownListFor(model => model.SupplierID, null, "Lựa chọn")
                @Html.ValidationMessageFor(model => model.SupplierID, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.Debit)</p>
                @Html.EditorFor(model => model.Debit, new { htmlAttributes = new { placeholder = "Nợ" } })
                @Html.ValidationMessageFor(model => model.Debit, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.Credit)</p>
                @Html.EditorFor(model => model.Credit, new { htmlAttributes = new { placeholder = "Có" } })
                @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.Code)</p>
                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { placeholder = "Mã phiếu nhập" } })
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.TotalPrice)</p>
                @Html.EditorFor(model => model.TotalPrice, new { htmlAttributes = new { id = "receiptTotalPrice", placeholder = "Tổng số tiền" } })
                @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
            </div>

            <div>
                <p>@Html.LabelFor(model => model.Status)</p>
                @Html.CheckBoxFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="create-new-confirm">
            <button type="submit"><i class="fas fa-plus-circle"></i>Lưu</button>
            <button onclick="history.back(-1)" type="button"><i class="fas fa-ban"></i>Trở về</button>
        </div>
    </div>
}
