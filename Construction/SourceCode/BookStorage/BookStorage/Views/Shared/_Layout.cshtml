<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Import FontAwesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <!-- Import CSS -->
    <link rel="stylesheet" href="~/Assets/CSS/style.css">
    <link href="~/Assets/CSS/PagedList.css" rel="stylesheet" />
    <link rel="icon" href="~/Assets/Images/logo.png">
    <title>Book Storage</title>
</head>
<body class="f-roboto">
    <!--------------------- START SIDEBAR (All pages) -------------------->
    @RenderPage("_Sidebar.cshtml")
    <!--------------------- END SIDEBAR (All pages) ---------------------->
    <div id="content">
        <!--------------------- START Header (All pages) --------------------->
        @RenderPage("_Header.cshtml")
        <!--------------------- END Header (All pages) ----------------------->
        <!--------------------- START CONTENT (Each page) -------------------->
        <div id="main-content">
            <div id="book-content">
                <h1>@RenderSection("title", required: false)</h1>
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                        @TempData["AlertMessage"]
                    </div>
                }
                @RenderBody()
            </div>
        </div>
        <!--------------------- END CONTENT (Each page) ---------------------->
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous">
    </script>
    <script src="~/Assets/JS/index.js"></script>
    <link href="~/Assets/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Assets/JS/plugins/ckfinder/ckfinder.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>